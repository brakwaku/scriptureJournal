@page
@model RazorPagesScripture.Pages.Scriptures.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form>
    <p>
        <select asp-for="ScriptureNote" asp-items="Model.Notes">
            <option value="">All</option>
        </select>
        Scripture: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Scripture[0].ScriptureRef)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Scripture[0].DateEntered)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Scripture[0].Note)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Scripture) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ScriptureRef)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateEntered)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Note)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ScriptureID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ScriptureID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ScriptureID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
